{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "skipLibCheck": true,
    "outDir": "temp",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "declarationDir": "declarations",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true
  }
}
